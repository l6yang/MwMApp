        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.mwm.loyal.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/install_file_path" />
        </provider>

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="43de3133c7c2f9737f8f6dd06f14ec3c" />
        <!-- 定位需要的服务 -->
        <service android:name="com.amap.api.location.APSService" />

        <activity
            android:name=".activity.WeatherActivity"
            android:theme="@style/BaseSwipeTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".activity.CityActivity"
            android:theme="@style/BaseSwipeTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".activity.VoiceActivity"
            android:theme="@style/BaseSwipeTheme" />

        <service
            android:name=".service.LocationService"
            android:exported="false" />

        <activity
            android:name=".activity.ShareActivity"
            android:theme="@style/BaseSwipeTheme" />
    </application>

</manifest>