<resources>
    <!--SwipBack-->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@mipmap/shadow_left</item>
        <item name="shadow_right">@mipmap/shadow_right</item>
        <item name="shadow_bottom">@mipmap/shadow_bottom</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/statusBar</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/statusBar</item>
    </style>

    <style name="BaseAppTheme" parent="@style/AppTheme" />

    <style name="SwipeTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="BaseSwipeTheme" parent="@style/SwipeTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme"> <!--自定义主题名称-->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="baseFragStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#EFEFEF</item>
        <item name="android:orientation">vertical</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="baseActStyle" parent="baseFragStyle">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="layout_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="rightWeightStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_sp_18</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!---->
    <style name="AlbumMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- WrapContent -->
    <style name="AlbumWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlbumWrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AlbumToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="AlbumToolbar.PopupTheme">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <!-- CheckBox -->

    <style name="AlbumCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox" />

    <style name="AlbumCheckBox.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AlbumDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AlbumDialogStyle.Folder">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AlbumDialogStyle.Preview">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- Button -->
    <style name="AlbumButtonText" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="itemAboutText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/drawable_settings_item</item>
        <item name="android:drawableEnd">@mipmap/arrow_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_sp_16</item>
    </style>

    <style name="buttonStyle">
        <item name="android:id">@id/submitView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/drawable_btn_login</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/color_text_click</item>
        <item name="android:textSize">@dimen/text_sp_18</item>
    </style>

    <style name="SwitchCompat.TextAppearance" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/src_switch_check</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--app:theme=""-->
    <style name="SwitchCompat.Theme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorSwitchThumbNormal">@android:color/holo_red_light</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>
</resources>