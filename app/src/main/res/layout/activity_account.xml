<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="click"
            type="com.mwm.loyal.handler.AccountHandler" />

        <variable
            name="drawable"
            type="android.graphics.drawable.Drawable" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{drawable}"
        android:fitsSystemWindows="true"
        tools:context=".activity.AccountActivity">

        <include
            android:id="@id/pub_layout_title"
            layout="@layout/pub_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/pub_layout_title"
            android:background="@color/trans"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/drawable_login_input"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/account_device_lock"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:onClick="@{click.onClick}"
                        android:contentDescription="@string/off"
                        android:src="@mipmap/switch_off" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/account_device_lock"
                        android:layout_toStartOf="@id/account_device_lock"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/device_lock"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_sp_16" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/account_mm_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_settings_item"
                    android:drawableEnd="@mipmap/arrow_right"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:onClick="@{click.onClick}"
                    android:padding="8dp"
                    android:text="@string/reset_mm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_sp_16" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>