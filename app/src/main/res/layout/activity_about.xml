<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="version"
            type="String" />

        <variable
            name="click"
            type="com.mwm.loyal.handler.AboutHandler" />

        <variable
            name="drawable"
            type="android.graphics.drawable.Drawable" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{drawable}"
        android:fitsSystemWindows="true"
        tools:context="activity.AboutActivity">

        <include
            android:id="@id/pub_layout_title"
            layout="@layout/pub_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/pub_layout_title"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/empty"
                android:src="@mipmap/icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@{version}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_sp_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_login_input"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/about_version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_settings_item"
                    android:drawableEnd="@mipmap/arrow_right"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:onClick="@{click.onClick}"
                    android:padding="8dp"
                    android:text="@string/ver"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/about_feedBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_settings_item"
                    android:drawableEnd="@mipmap/arrow_right"
                    android:drawableRight="@mipmap/arrow_right"
                    android:gravity="center_vertical"
                    android:onClick="@{click.onClick}"
                    android:padding="8dp"
                    android:text="@string/feedback"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_sp_16" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
