<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SimpleTestActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_ii"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_ib"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/simple_ii"
        android:layout_centerInParent="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_ir_i"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/simple_ib"
        android:background="@color/colorAccent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_ir_b"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/simple_ib"
        android:background="@color/colorAccent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_i_io"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/simple_ii"
        android:background="@color/colorAccent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_i_b"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/simple_ii"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorAccent" />
</RelativeLayout>
