<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="drawable"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="click"
            type="com.mwm.loyal.handler.SettingsHandler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{drawable}"
        android:fitsSystemWindows="true">

        <include
            android:id="@id/pub_layout_title"
            layout="@layout/pub_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/pub_layout_title"
            android:background="@color/trans"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/settings_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/drawable_btn_login"
                android:gravity="center"
                android:onClick="@{click::onClick}"
                android:padding="10dp"
                android:text="@string/account_switch"
                android:textColor="@color/color_text_click"
                android:textSize="@dimen/text_sp_18" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/settings_switch"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_input"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/settings_security"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_settings_item"
                        android:drawableEnd="@mipmap/arrow_right"
                        android:drawableRight="@mipmap/arrow_right"
                        android:gravity="center_vertical"
                        android:onClick="@{click::onClick}"
                        android:padding="8dp"
                        android:text="@string/Account_security"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_settings_item"
                        android:drawableEnd="@mipmap/arrow_right"
                        android:drawableRight="@mipmap/arrow_right"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/settings_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_settings_item"
                        android:drawableEnd="@mipmap/arrow_right"
                        android:drawableRight="@mipmap/arrow_right"
                        android:gravity="center_vertical"
                        android:onClick="@{click::onClick}"
                        android:padding="8dp"
                        android:text="@string/about"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_sp_16" />
                </LinearLayout>

            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
</layout>
