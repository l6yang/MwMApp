<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.CaptureActivity">

    <include
        android:id="@id/pub_layout_title"
        layout="@layout/pub_title" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pub_layout_title" />

    <com.mwm.loyal.libs.zxing.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pub_layout_title" />

    <com.mwm.loyal.libs.zxing.AutoScannerView
        android:id="@+id/autoScannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pub_layout_title" />

</RelativeLayout>
